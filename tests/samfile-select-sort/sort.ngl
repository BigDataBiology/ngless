ngless '0.0'
import "samtools" version "0.0"
to_sort = samfile('input.bam')
unsorted = select(to_sort, keep_if=[{mapped}])
sorted = samtools_sort(unsorted)
namesorted = samtools_sort(unsorted, by_name=True)

write(unsorted, ofile='output.unsorted.bam')
write(sorted, ofile='output.pos_sorted.bam')
write(namesorted, ofile='output.name_sorted.bam')
