ngless "0.0"

//File path to FASTQ file
fp = '../samples/ce.fq'

input = fastq(fp)
mapped = map(input,reference='ce10')

//features
feats = [{exon}]
annotated = annotate(mapped, strand={yes}, mode="union", ambiguity={deny}, features=feats)

//Minimum value
min = 10

counts = count(annotated, min=min)
write(counts, ofile="../samples/CountsResult.txt")